---
interface Props {
  href: string;
  external?: boolean;
  unstyled?: boolean;
  class_?: string;
}

const { href, external, class_, unstyled } = Astro.props;
---

<a
  class:list={[
    "relative text-xl w-fit block",
    class_,
    {
      "after:block after:absolute after:h-[3px] after:bg-current after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 after:origin-center":
        !unstyled,
    },
  ]}
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
>
  <slot />
</a>
